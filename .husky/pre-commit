#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Get only staged JS/TS files
RAW_FILES=$(git diff --cached --name-only | grep -E '\.(js|ts|jsx|tsx)$' || true)

FILES=""
for file in $RAW_FILES; do
  if [ -f "$file" ]; then
    FILES="$FILES $file"
  fi
done

if [ -z "$FILES" ]; then
  echo "âœ… No JS/TS files to check."
  exit 0
fi

echo "ğŸ” Files being checked:"
echo "$FILES"

HAS_CONSOLE_LOG=0

for file in $FILES; do
  echo "ğŸ‘€ Checking $file"
  if grep -En "console\s*\.\s*log\s*\(" "$file"; then
    echo "âŒ console.log found in $file"
    HAS_CONSOLE_LOG=1
  fi
done

if [ "$HAS_CONSOLE_LOG" -eq 1 ]; then
  echo "ğŸš« Commit aborted due to console.log statements."
  exit 1
fi

echo "âœ… All pre-commit checks passed."
exit 0
