#!/bin/sh

echo "ğŸ” Running pre-push checks..."

# Prevent pushing to main
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)
if [ "$BRANCH_NAME" = "main" ]; then
  echo "âŒ Pushing directly to main is not allowed!"
  exit 1
fi

# Check branch name format
if ! echo "$BRANCH_NAME" | grep -Eq '^(architecture|feature|bugfix|hotfix|release)/[a-z0-9._-]+$'; then
  echo "âŒ Invalid branch name: $BRANCH_NAME"
  echo "Allowed format: feature/xyz or bugfix/abc"
  exit 1
fi

FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|ts|jsx|tsx)$')
echo "ğŸ” Files being checked:"
echo "$FILES"

FOUND_LOGS=false

for file in $FILES; do
  if [ -f "$file" ]; then
    echo "ğŸ‘€ Checking $file"
    if grep -q "console\.log" "$file"; then
      echo "âŒ Found console.log in $file"
      FOUND_LOGS=true
    fi
  fi
done

if [ "$FOUND_LOGS" = true ]; then
  echo "ğŸš« Push blocked due to console.log usage."
  exit 1
fi

echo "âœ… No console.log found. Proceeding with push."
echo "âœ… All pre-push checks passed!"
