#!/bin/sh

set -e

echo "ğŸ” Running pre-push checks..."

# Prevent pushing to main
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)
echo "ğŸ“ Current branch: $BRANCH_NAME"

if [ "$BRANCH_NAME" = "main" ]; then
  echo "âŒ Pushing directly to main is not allowed!"
  exit 1
fi

# Check branch name format
if ! echo "$BRANCH_NAME" | grep -Eq '^(architecture|feature|design|update|bugfix|hotfix|release)-[a-z0-9._-]+$'; then
  echo "âŒ Invalid branch name: $BRANCH_NAME"
  echo "Allowed format: [architecture|feature|design|update|bugfix|hotfix|release]-your-branch-name"
  exit 1
fi

# Fetch the latest develop branch for comparison
echo "ğŸ”„ Fetching origin/develop..."
git fetch origin develop

# Get changed JS/TS files compared to develop
RAW_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|ts|jsx|tsx)$' | grep -v '^.husky/' || true)

FILES=""
for file in $RAW_FILES; do
  if [ -f "$file" ]; then
    FILES="$FILES $file"
  fi
done

if [ -z "$FILES" ]; then
  echo "âœ… No JS/TS files changed compared to develop. Skipping ESLint."
  exit 0
fi

echo "ğŸ” Linting changed files:"
echo "$FILES"

# ğŸ§¹ Run ESLint
echo "ğŸ” Running ESLint for unused imports..."
npx eslint $FILES --max-warnings=0 || {
  echo "ğŸš« ESLint found issues (e.g., unused imports)."
  echo "âŒ Push aborted due to lint errors."
  exit 1
}

echo "âœ… All pre-push checks passed!"
